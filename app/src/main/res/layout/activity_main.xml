<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="380dp"
        android:layout_height="72dp"
        android:layout_marginTop="468dp"
        android:layout_marginBottom="84dp"
        android:text="@string/name"
        android:textColor="#EAEAEA"
        android:textColorHighlight="#F6F1F1"
        android:textColorHint="#AC5252"
        android:textSize="38sp"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/getName"
        android:layout_width="232dp"
        android:layout_height="69dp"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="3dp"
        android:autofillHints=""
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#F6EFEF"
        android:textColorHighlight="#E3D1D1"
        android:textColorHint="#FAE9E9"
        android:textColorLink="#E8D5D5"
        app:layout_constraintBottom_toBottomOf="@+id/textView1"
        app:layout_constraintEnd_toEndOf="@+id/textView1"
        app:layout_constraintStart_toStartOf="@+id/textView1"
        app:layout_constraintTop_toTopOf="@+id/textView1" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="171dp"
        android:layout_height="77dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="31dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:text="@string/submit"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="259dp"
        android:text="@string/setting_up_the_faraday"
        android:textColor="#EAEAEA"
        android:textColorHighlight="#F6F1F1"
        android:textColorHint="#AC5252"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textView1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>