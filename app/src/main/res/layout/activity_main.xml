<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
>

    <EditText
        android:id="@+id/getName"
        android:layout_width="232dp"
        android:layout_height="69dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="222dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="76dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textColor="#F6EFEF"
        android:textColorHighlight="#E3D1D1"
        android:textColorHint="#FAE9E9"
        android:textColorLink="#E8D5D5"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/submitButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_up_faraday" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:layout_marginStart="111dp"
        android:layout_marginEnd="129dp"
        android:layout_marginBottom="114dp"
        android:background="@android:drawable/divider_horizontal_bright"
        android:text="@string/submit"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/setting_up_faraday"
        android:layout_width="315dp"
        android:layout_height="76dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="32dp"
        android:text="@string/setting_up_the_faraday"
        android:textColor="#EAEAEA"
        android:textColorHighlight="#F6F1F1"
        android:textColorHint="#AC5252"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>